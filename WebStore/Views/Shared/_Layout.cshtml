<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Книжный уголок</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex h-100 text-center text-white bg-dark">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-start mb-0">Книжный уголок</h3>
                <div class ='text-dark'>.</div>
                <nav class="nav nav-masthead justify-content-center float-md-endclass=" nav nav-masthead justify-content-center float-md-end>
                    <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Product" asp-action="ProductsView">Каталог</a>
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>

                    <form class="d-flex">
                        <input class="form-control me-0" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Поиск</button>
                    </form>
                    <div class="text-lg-right">
                        @await Component.InvokeAsync("CartWiget")
                    </div>
                    <div class="text-lg-right" style="float: right">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Выход</a>
                        }
                        else
                        {
                            <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">Авторизация</a>
                        }
                    </div>
                </nav>
            </div>
        </header>
        <div class="container">
            <main role="main" class="px-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - BookCorner - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
